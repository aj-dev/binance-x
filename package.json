{
    "name": "binance-x",
    "version": "0.1.0",
    "private": true,
    "license": "GPLv3",
    "description": "Binance exchange portfolio management app",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "watch": "vue-cli-service build --watch",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "binance-api-node": "0.9.11",
        "vue": "2.6.12",
        "vue-router": "3.4.3",
        "vuex": "^3.5.1",
        "vuex-persist": "^2.2.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "4.5.4",
        "@vue/cli-plugin-eslint": "4.5.4",
        "@vue/cli-service": "4.5.4",
        "autoprefixer": "^9.8.6",
        "babel-eslint": "10.1.0",
        "copy-webpack-plugin": "6.0.4",
        "eslint": "7.7.0",
        "eslint-plugin-vue": "6.2.2",
        "svg-sprite-loader": "5.0.0",
        "svgo": "1.3.2",
        "svgo-loader": "2.2.1",
        "tailwindcss": "^1.8.9",
        "vue-template-compiler": "2.6.12"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "quotes": [
                "error",
                "single"
            ],
            "indent": [
                "error",
                4
            ],
            "max-len": [
                "error",
                {
                    "code": 250
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "browserslist": [
        "last 2 chrome versions"
    ]
}
