{
    "name": "Cryptofoli",
    "version": "0.0.2",
    "description": "Binance exchange portfolio management app",
    "permissions": [
        "storage",
        "declarativeContent",
        "https://api.binance.com/",
        "https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
    },
    "manifest_version": 2
}